<odoo>
    <data>
        <record id="view_res_bank_form" model="ir.ui.view">
            <field name="name">view.res.bank.form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='communication_details']" position="after">
                    <group string="Account">
                        <field name="journal_id"/>
                    </group>
                </xpath>
            </field>
        </record>

        <menuitem 
            id="menu_res_bank" 
            action="base.action_res_bank_form"
            sequence="0"
            parent="account.account_banks_menu"/>
    </data>
</odoo>