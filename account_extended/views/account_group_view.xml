<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_group_form" model="ir.ui.view">
            <field name="name">view.account.group.form</field>
            <field name="model">account.group</field>
            <field name="inherit_id" ref="account.view_account_group_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="niif_bool" groups="account.group_account_readonly"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_account_group">
            <field name="name">Account Groups</field>
            <field name="res_model">account.group</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first account group
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_account_group" 
            action="action_account_group"
            sequence="6"
            parent="account.account_account_menu"/>
    </data>
</odoo>
