<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_sale_info" model="res.groups">
            <field name="name">Info</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_sale_point" model="res.groups">
            <field name="name">Point Asesor</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_info'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_sale_support" model="res.groups">
            <field name="name">Support Asesor</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_point'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="sales_team.group_sale_salesman" model="res.groups">
            <field name="name">Asesor</field>
            <field name="implied_ids" eval="[(4, ref('group_sale_support'))]"/>
        </record>

        <record id="sales_team.group_sale_salesman_all_leads" model="res.groups">
            <field name="name">Admin</field>
        </record>
    </data>
</odoo>