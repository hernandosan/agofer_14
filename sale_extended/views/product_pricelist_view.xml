<odoo>
    <data>
        <record id="view_product_pricelist_form" model="ir.ui.view">
            <field name="name">view.product.pricelist.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='pricelist_discounts']" position="inside">
                    <label for="discount_maximum" />
                    <div> <field name="discount_maximum" class="oe_inline" /> % </div>
                    <label for="discount_freight" />
                    <div> <field name="discount_freight" class="oe_inline" /> % </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>