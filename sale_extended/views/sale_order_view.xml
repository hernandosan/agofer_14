<odoo>
    <data>
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">view.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath> -->
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">sales_team.group_sale_salesman_all_leads</attribute>
                </xpath>
                <xpath expr="//button[@name='action_draft']" position="attributes">
                    <attribute name="groups">sales_team.group_sale_salesman_all_leads</attribute>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="before">
                    <field name="pricelists_ids" invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="domain">[('id','in',pricelists_ids)]</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="groups">account_credit_control.group_account_credit_control_user,sales_team.group_sale_manager</attribute>
                    <attribute name="attrs">{'readonly': [('state','in',('done','cancel'))]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/group/group[1]/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/group/group[1]/field[@name='price_unit']" position="after">
                    <field name="price_kg"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="price_kg" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="before">
                    <field name="teams_ids" invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state','=','done')]}</attribute>
                    <attribute name="domain">[('id','in',teams_ids)]</attribute>
                    <attribute name="required">True</attribute>
                </xpath>
                <xpath expr="//group[@name='sale_shipping']/label[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='sale_shipping']/div[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='sale_shipping']" position="inside">
                    <field name="shipping_type" required="True" attrs="{'readonly': [('state','not in',('draft','sent'))]}"/>
                    <field name="delivery_assistant" 
                        attrs="{'invisible': [('shipping_type','!=','delivery')], 'readonly': [('state','not in',('draft','sent'))]}"/>
                </xpath>
                <xpath expr="//group[@name='sale_shipping']" position="after">
                    <group string="Shipping Date">
                        <field name="shipping_bool" invisible="True"/>
                        <field name="delivery_bool" 
                            attrs="{'invisible': [('shipping_type','!=','delivery')], 'readonly': [('state','not in',('draft','sent'))]}"/>
                        <field name="upload_delay" invisible="True"/>
                        <field name="upload_date" 
                            attrs="{'invisible': [('shipping_type','!=','delivery')], 'required': [('shipping_type','=','delivery'),('delivery_bool','=',False)], 'readonly': [('state','not in',('draft','sent'))]}"/>
                        <field name="delivery_delay" invisible="True"/>
                        <field name="delivery_date" 
                            attrs="{'invisible': [('shipping_type','!=','delivery')], 'required': [('shipping_type','=','delivery'),('delivery_bool','=',False)], 'readonly': [('state','not in',('draft','sent'))]}"/>
                        <field name="pick_bool" 
                            attrs="{'invisible': [('shipping_type','!=','pick')], 'readonly': [('state','not in',('draft','sent'))]}"/>
                        <field name="pick_date" 
                            attrs="{'invisible': [('shipping_type','!=','pick')], 'required': [('shipping_type','=','pick'),('pick_bool','=',False)], 'readonly': [('state','not in',('draft','sent'))]}"/>
                        <field name="pick_file" filename="pick_file_name"
                            attrs="{'invisible': [('shipping_type','!=','pick')], 'required': [('shipping_type','=','pick'),('pick_bool','=',False)], 'readonly': [('state','not in',('draft','sent'))]}"/>
                        <field name="pick_file_name" invisible="True"/>
                    </group>
                </xpath>
                <xpath expr="//page[@name='other_information']" position="before">
                    <group string="Payments">
                        <field name="payment_journal_id" invisible="True"/>
                        <field name="payment_account_id" invisible="True"/>
                        <field name="payments_id" attrs="{'readonly': [('state','not in',('draft','sent'))]}" 
                        context="{
                            'default_payment_type': 'inbound',
                            'default_partner_type': 'customer',
                            'default_partner_id': partner_id,
                            'default_currency_id': currency_id,
                            'default_amount': amount_total,
                            'default_ref': name,
                            'default_destination_account_id': payment_account_id,
                            'default_journal_id': payment_journal_id,
                            'default_destination_account_id': payment_account_id,
                        }"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_form_stock" model="ir.ui.view">
            <field name="name">view.sale.order.form.stock</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='warehouse_id']" position="before">
                    <field name="warehouses_ids" invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='warehouse_id']" position="attributes">
                    <attribute name="domain">[('id','in',warehouses_ids)]</attribute>
                </xpath>
                <xpath expr="//field[@name='incoterm']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>