<odoo>
    <data>
        <record id="view_account_payment_term_view" model="ir.ui.view">
            <field name="name">view.account.payment.term.view</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="credit_type" invisible="False"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>