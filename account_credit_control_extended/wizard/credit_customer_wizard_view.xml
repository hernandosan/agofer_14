<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_credit_interest_wizard_form" model="ir.ui.view">
            <field name="name">view.credit.interest.wizard.form</field>
            <field name="model">credit.interest.wizard</field>
            <field name="arch" type="xml">
                <form string="Credit Interest">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="partner_id" placeholder="Partner" readonly="1"/>
                            </h1>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_credit_customer" type="object"
                                string="Compute" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_credit_customer_wizard" model="ir.actions.act_window">
            <field name="name">Credit Customer</field>
            <field name="res_model">credit.interest.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
        </record>

        <menuitem id="menu_credit_customer"
                  name="Credit Customer"
                  action="action_credit_customer_wizard"
                  parent="contacts.res_partner_menu_contacts"
                  sequence="4"/>
    </data>
</odoo>