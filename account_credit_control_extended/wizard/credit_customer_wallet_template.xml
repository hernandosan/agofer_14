<odoo>
    <data>
        <report
            id="report_credit_customer_wallet"
            model="res.partner"
            string="Credit Customer Wallet"
            name="account_credit_control_extended.template_credit_customer_wallet"
            report_type="qweb-pdf"/>

        <template id="template_credit_customer_wallet">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="account_credit_control_extended.template_credit_customer_wallet_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="style_table">
            <link rel="stylesheet" type="text/css" href="/account_credit_control_extended/static/src/css/report_style.css"/>
        </template>

        <template id="template_credit_customer_wallet_document">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <t t-call="web.external_layout">
                <div>
                    <h1 style="text-align:center;">Portfolio Customer</h1>
                    <br></br>
                    <table id="header">
                        <tr>
                            <th name="th_date">Date Print</th>
                            <td name="td_date"><span t-field="doc.payment_date"/></td>
                            <th name="th_partner">Customer</th>
                            <td name="td_partner"><span t-field="doc.partner_id.name"/></td>
                        </tr>
                        <tr>
                            <th name="th_partner_vat">NIT</th>
                            <td name="td_partner_vat"><span t-field="doc.partner_id.vat"/></td>
                            <th name="th_credit_limit">Credit Limit</th>
                            <td name="td_credit_limit"><span t-field="doc.partner_id.credit_limit"/></td>
                        </tr>
                        <tr>
                            <th name="th_payment_term">Payment Deadline</th>
                            <td name="td_payment_term"><span t-field="doc.partner_id.property_payment_term_id"/></td>
                            <th name="th_res_users">Salesman</th>
                            <td name="td_res_users"><span t-field="doc.partner_id.user_id"/></td>
                        </tr>
                    </table>
                </div>
                <br></br>
                <div>
                    <table id="report">
                        <thead>
                            <tr>
                                <th name="th_move_id">Invoice</th>
                                <th name="th_date">Date</th>
                                <th name="th_date_maturity">Date Maturity</th>
                                <th name="th_days_maturity">Days Maturity</th>
                                <th name="th_amount">Amount</th>
                                <th name="th_amount_taxed">Amount Residual</th>
                            </tr>
                        </thead>
                        <tbody >
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr>
                                    <!-- <td name="td_move_id"><span t-field="line.invoice_id"/></td>
