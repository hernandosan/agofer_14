<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_delivery_guide_move_tree">
            <field name="name">view.delivery.guide.move.tree</field>
            <field name="model">delivery.guide.move</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree string="Moves">
                    <field name="guide_id" invisible="True"/>
                    <field name="picking_id"/>
                    <field name="move_id" invisible="True"/>
                    <field name="move_type" invisible="True"/>
                    <field name="product_id"/>
                    <field name="product_uom_id"/>
                    <field name="product_uom_qty"/>
                    <field name="move_state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_delivery_guide_move_form">
            <field name="name">view.delivery.guide.move.form</field>
            <field name="model">delivery.guide.move</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Move">
                    <sheet>
                        <group>
                            <group>
                                <field name="guide_id" invisible="True"/>
                                <field name="move_id" readonly="True"/>
                                <field name="move_state" readonly="True"/>
                                <field name="move_type" readonly="True"/>
                            </group>
                            <group>
                                <field name="product_id" readonly="True"/>
                                <field name="product_uom_id" readonly="True"/>
                                <field name="product_uom_qty" readonly="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>