<odoo>
    <data>
        <record id="view_product_product_form" model="ir.ui.view">
            <field name="name">view.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(stock.product_open_orderpoint)d'][1]" position="attributes">
                    <attribute name="groups">stock.group_stock_user</attribute>
                </xpath>
                <xpath expr="//button[@name='%(stock.product_open_orderpoint)d'][2]" position="attributes">
                    <attribute name="groups">stock.group_stock_user</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>