<odoo>
    <data>
        <record id="view_product_template_form" model="ir.ui.view">
            <field name="name">view.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="tariff_code" placeholder="15.01.10.00.00" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_product_form" model="ir.ui.view">
            <field name="name">view.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="tariff_code" placeholder="15.01.10.00.00"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>