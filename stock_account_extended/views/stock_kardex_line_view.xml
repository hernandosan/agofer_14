<odoo>
    <data>
        <record id="view_stock_kardex_line_search" model="ir.ui.view">
            <field name="name">view.stock.kardex.line.search</field>
            <field name="model">stock.kardex.line</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <search string="Kardex Items">
                    <field name="user_id"/>
                    <field name="product_id"/>
                    <field name="kardex_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_user_id" string="User" context="{'group_by':'user_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_stock_kardex_line_tree">
            <field name="name">view.stock.kardex.line.tree</field>
            <field name="model">stock.kardex.line</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree string="Kardex Items" create="False" edit="False" delete="False" editable="bottom">
                    <field name="stock_move_id"/>
                    <field name="date"/>
                    <field name="product_id" invisible="True"/>
                    <field name="move_type" invisible="True"/>
                    <field name="move_subtype"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                    <field name="qty_init"/>
                    <field name="quantity"/>
                    <field name="qty_end"/>
                    <field name="price_unit"/>
                    <field name="price_total"/>
                    <field name="standard_price"/>
                    <field name="value_total"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_stock_kardex_line_form">
            <field name="name">view.stock.kardex.line.form</field>
            <field name="model">stock.kardex.line</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Kardex Item">
                    <sheet>
                        <group>
                            <group>
                                <field name="stock_move_id"/>
                                <field name="date"/>
                                <field name="product_id" invisible="True"/>
                                <field name="move_type" invisible="True"/>
                                <field name="move_subtype"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                            </group>
                            <group>
                                <field name="qty_init"/>
                                <field name="quantity"/>
                                <field name="qty_end"/>
                                <field name="price_unit"/>
                                <field name="price_total"/>
                                <field name="standard_price"/>
                                <field name="value_total"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_stock_kardex_line">
            <field name="name">Report Kardex Line</field>
            <field name="res_model">stock.kardex.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{create': False}</field>
            <field name="view_id" ref="view_stock_kardex_line_tree"/>
        </record>

        <record id="action_stock_kardex_line_select" model="ir.actions.act_window">
            <field name="name">Kardex Items</field>
            <field name="res_model">stock.kardex.line</field>
            <field name="search_view_id" ref="view_stock_kardex_line_search"/>
            <field name="context">{'search_default_kardex_id': [active_id]}</field>
        </record>
    </data>
</odoo>